<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project_cv_bulder.HelloController">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="50" left="50" right="50" top="50" />
            </padding>

            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome to CV Builder" textFill="#47c4c0" />

            <Button fx:id="createCVButton" onAction="#handleCreateCV" style="-fx-font-size: 16px;" text="Create New CV" textFill="#47c4c0" />
        </VBox>
    </center>

</BorderPane>
