<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.project_cv_bulder.CVPreviewController"
      spacing="10" style="-fx-padding: 20; -fx-background-color: white;">

    <Label fx:id="nameLabel" text="Name:"/>
    <Label fx:id="emailLabel" text="Email:"/>
    <Label fx:id="phoneLabel" text="Phone:"/>
    <Label fx:id="addressLabel" text="Address:"/>

    <Label text="Education:" style="-fx-font-weight: bold;"/>
    <Label fx:id="educationLabel" wrapText="true"/>

    <Label text="Skills:" style="-fx-font-weight: bold;"/>
    <Label fx:id="skillsLabel" wrapText="true"/>

    <Label text="Work Experience:" style="-fx-font-weight: bold;"/>
    <Label fx:id="workExpLabel" wrapText="true"/>

    <Label text="Projects:" style="-fx-font-weight: bold;"/>
    <Label fx:id="projectsLabel" wrapText="true"/>

</VBox>
